{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "@playwright/test"]
  },
  "include": ["src/**/*", "tests/**/*", "playwright.config.ts"],
  "exclude": [
    "node_modules",
    "test-results",
    "playwright-report",
    "allure-results",
    "allure-report",
    "lighthouse-reports"
  ]
}
